{
  "extends": [
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "printWidth": 100,
        "tabWidth": 2,
        "trailingComma": "es5",
        "endofLine": "lf"
      }
    ]
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module",
    "babelOptions": {
      "presets": ["@babel/preset-react"]
   }
  }
}
